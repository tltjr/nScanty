@model nScanty.Models.Post
           
<div id="content">
    <div class="postzoom">
    	<h2 class="title">@Model.Title</h2>
    	<p class="meta">
            <small>
                @if (Model.Tags != null)
                {
                     foreach (var tag in Model.Tags)
                     {
                         <a href="/tags/@tag">@tag</a>

                        @*<% if Blog.disqus_shortname %>
                        this was being read out of main.rb OpenStruct, would be web.config for this app
            				| <a href="<%= post.url %>#disqus_thread">comments</a>
            			<% end %>*@
                    }
                }
             </small>
         </p>
        @*<p class="meta"><%= post.created_at %></p>*@
		<div class="entry">
            @{
                var body = Model.Body;
                var bodyHtml = body.Replace("\r\n", "<br />");
                @Html.Raw(bodyHtml)
            }
		</div>
        @if (User.Identity.IsAuthenticated)
        {
            <div class="edit">
                @Html.ActionLink("Edit", "Edit", "Home", new { objectId = Model.Id}, null)
            </div>
        }
    </div>
</div>

