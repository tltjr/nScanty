@model nScanty.Models.Post
           
<div class="postzoom">
	<h2 class="title">@Model.Title</h2>
	<p class="meta"><small>
                    @foreach (var tag in Model.Tags)
                    {
                        <a href="/past/tags/@tag">@tag</a>
                    }
        		</small></p>
                        
	            @*<p class="meta"><%= post.created_at %></p>*@
